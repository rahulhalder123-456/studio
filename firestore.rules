
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if the user is an admin
    function isAdmin() {
      return request.auth.uid in [
        'ToBDMq0KVIgnLQCEeFzxLzB4HUj1'
      ];
    }
    
    // --- Users Collection ---
    // Users can only read/write their own profile data.
    // Admins can read any user's profile.
    match /users/{userId} {
      allow read: if request.auth.uid == userId || isAdmin();
      allow write: if request.auth.uid == userId;
    }
    
    // --- Projects Collection ---
    // Logged-in users can create projects.
    // They can only read/update/delete projects they own.
    // Admins can read/write any project.
    match /projects/{projectId} {
      allow create: if request.auth != null;
      allow read, update, delete: if request.resource.data.userId == request.auth.uid || isAdmin();
    }
    
    // --- Chat Collection ---
    match /chats/{chatId} {
      // Admins can read any chat document
      allow read: if isAdmin();
      // Users can create/update their own chat document
      allow create, update: if request.auth.uid != null && chatId == 'support_' + request.auth.uid;
      
      // Messages Subcollection
      match /messages/{messageId} {
        // Admins can read/write any message
        allow read, write: if isAdmin();
        // Users can read/write messages in their own chat
        allow read: if request.auth.uid != null && chatId == 'support_' + request.auth.uid;
        // User must be writing to their own chat channel. This rule works even if the parent chat doc doesn't exist yet.
        allow write: if request.auth.uid != null && request.resource.data.senderId == request.auth.uid && chatId == 'support_' + request.auth.uid;
      }
    }
    
    // --- Featured Projects Collection ---
    // Public can read, Admins can write
    match /featuredProjects/{projectId} {
        allow read: if true;
        allow write: if isAdmin();
    }

    // --- Reviews Collection ---
    // Public can read, authenticated users can write their own review
    match /reviews/{reviewId} {
        allow read: if true;
        allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
        allow update, delete: if isAdmin();
    }

    // --- Payment Methods Subcollection ---
    // Users can manage their own payment methods.
    match /users/{userId}/paymentMethods/{paymentMethodId} {
        allow read, write, delete: if request.auth.uid == userId;
    }
    
    // --- Time Entries Subcollection ---
    // Admins can manage time entries for any project.
    match /projects/{projectId}/timeEntries/{timeEntryId} {
        allow read, write: if isAdmin();
    }
  }
}
