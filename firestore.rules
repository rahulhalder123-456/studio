
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Helper function to check if the current user is an admin.
    // UIDs are hardcoded for this prototype. In a production app,
    // this could be based on custom claims or a roles collection.
    function isAdmin() {
      return request.auth.uid in [
        'ToBDMq0KVIgnLQCEeFzxLzB4HUj1'
      ];
    }

    // --- User Profiles ---
    match /users/{userId} {
      // A user can create, read, and update their own profile.
      allow create, read, update: if request.auth.uid == userId;
      // An admin can read any individual user's profile.
      allow get: if isAdmin();
    }
    // An admin can list all users for the management dashboard.
    match /users/{user=**} {
      allow list: if isAdmin();
    }

    // --- Payment Methods ---
    match /users/{userId}/paymentMethods/{methodId} {
      // A user can manage their own payment methods.
      allow read, create, delete: if request.auth.uid == userId;
    }

    // --- Projects ---
    match /projects/{projectId} {
      // An authenticated user can create a project for themselves.
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
      // A user can read, update, or delete their own project.
      allow read, update, delete: if request.auth.uid == resource.data.userId;
      // An admin can get any individual project.
      allow get: if isAdmin();
    }
    // Admins can list all projects for the management dashboard.
    match /projects/{project=**} {
      allow list: if isAdmin();
    }

    // --- Chats ---
    match /chats/{chatId} {
      // Participants or admins can access the chat document itself.
      allow read, write: if (request.auth.uid in resource.data.participants) || isAdmin();
    }
    // Admins can list all chats for the management dashboard.
    match /chats/{chat=**} {
      allow list: if isAdmin();
    }
    // Messages within a chat
    match /chats/{chatId}/messages/{messageId} {
      // Participants or admins can read and create messages.
      allow read, create: if (exists(/databases/$(database)/documents/chats/$(chatId)) &&
        request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.participants) || isAdmin();
    }
  }
}
