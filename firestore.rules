
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // --- Users ---
    // Users can only read/write their own user document.
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;
    }

    // --- Projects ---
    // Authenticated users can read any project.
    // Users can only create projects for themselves.
    // Users can only update their own projects, but admins can update any project.
    match /projects/{projectId} {
       allow read: if request.auth != null;
       allow create: if request.auth.uid == request.resource.data.userId;
       allow update: if (request.auth.uid == resource.data.userId) || isAdmin();
    }
    
    // --- Featured Projects (Admin Only for write, public for read) ---
    match /featuredProjects/{projectId} {
        allow read; // Anyone can read
        allow create, update, delete: if isAdmin();
    }

    // --- Payment Methods (User Specific) ---
    match /users/{userId}/paymentMethods/{methodId} {
      allow read, create, delete: if request.auth.uid == userId;
    }
    
    // --- Reviews ---
    // Anyone can read reviews (for the public testimonials section).
    // Users can only create reviews for their own projects that are "Closed".
    match /reviews/{reviewId} {
      allow read;
      allow create: if request.auth.uid == request.resource.data.userId &&
                     get(/databases/$(database)/documents/projects/$(request.resource.data.projectId)).data.userId == request.auth.uid &&
                     get(/databases/$(database)/documents/projects/$(request.resource.data.projectId)).data.status == 'Closed';
    }

    // --- Chat ---
    // Users can only access their own chat document (e.g., support_their-uid).
    // Admins can access any chat document.
    match /chats/{chatId} {
        allow read, write: if (request.auth.uid != null && chatId == 'support_' + request.auth.uid) || isAdmin();

        // Messages can be read/written by chat participants or an admin.
        match /messages/{messageId} {
            allow read, write: if (request.auth.uid != null && exists(/databases/$(database)/documents/chats/$(chatId))) &&
                                  (request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.participants ||
                                   isAdmin());
        }
    }
    
    // Helper function for admin check
    function isAdmin() {
      // ðŸ”´ IMPORTANT: Replace with your actual Firebase User IDs (UIDs)
      let ADMIN_UIDS = [
        'ToBDMq0KVIgnLQCEeFzxLzB4HUj1',
      ];
      return request.auth.uid in ADMIN_UIDS;
    }
  }
}
