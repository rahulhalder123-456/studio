
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- Helper Function ---
    function isAdmin() {
      // ðŸ”´ IMPORTANT: This UID must match the one in src/lib/admin.ts
      return request.auth.uid in ['ToBDMq0KVIgnLQCEeFzxLzB4HUj1'];
    }
    
    // --- Users Collection ---
    // A user can create their own profile, and can only read/update their own profile.
    match /users/{userId} {
      allow read, update: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null;
      // Admins can read all user profiles
      allow get, list: if request.auth != null && isAdmin();
    }
    
    // --- Payment Methods Sub-collection ---
    // A user can only manage their own payment methods.
    match /users/{userId}/paymentMethods/{methodId} {
      allow read, create, delete: if request.auth != null && request.auth.uid == userId;
    }

    // --- Projects Collection ---
    match /projects/{projectId} {
      // A user can create a project for themselves.
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      // A user can read their own project. Admins can read any project.
      allow get: if request.auth != null && (resource.data.userId == request.auth.uid || isAdmin());
      // A user can list their own projects. Admins can list all projects.
      allow list: if request.auth != null;
    }
    
    // --- Featured Projects Collection ---
    // Anyone can read featured projects for the homepage.
    // Only admins can create, update, or delete featured projects.
    match /featuredProjects/{projectId} {
      allow read: if true;
      allow write: if request.auth != null && isAdmin();
    }
    
    // --- Chats Collection ---
    // Users can create/update their own support chat document.
    // Admins can read all chats.
    match /chats/{chatId} {
        allow get, list: if request.auth != null && isAdmin();
        allow write: if request.auth != null && chatId == 'support_' + request.auth.uid;
    }
    
    // --- Messages Sub-collection ---
    // A user can read/write messages in their own support chat.
    // Admins can read/write messages in any support chat.
    match /chats/{chatId}/messages/{messageId} {
      allow read, write: if request.auth != null && (('support_' + request.auth.uid == chatId) || isAdmin());
    }
    
  }
}
